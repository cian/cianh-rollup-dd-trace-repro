{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": false,
    "incremental": true,
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
